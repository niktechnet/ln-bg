{
    "name": "niktechnet/ln-bg",
    "type": "flarum-extension",
    "description": "Bulgarian language pack.",
    "keywords": [
        "locale", 
        "niktechnet",
        "ln-bg"],
    "license": "MIT",
    "authors": [
        {
            "name": "Nikolay Ivanov",
            "email": "niktechnet@gmail.com",
            "role": "Translator"
        }
    ],
    "require": {
        "flarum/core": "^0.1.0-beta.15"
    },
    "autoload": {
        "psr-4": {
          "Niktechnet\\LnBg\\": "locale/"
        }
      },
    "extra": {
        "flarum-extension": {
            "title": "Български",
            "category": "language",
            "info": {
                "donate": "https://flarum.org/donate/",
                "website": "https://flarum.org",
                "support": "https://discuss.flarum.org"
